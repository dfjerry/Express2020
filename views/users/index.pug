extends ../layouts/common
block content
        h1 Users
        a.btn.btn-primary(href="/users/create") create
        form(action="/users/search", method="GET", class="d-flex")
            input(type="text", name="q", class="form-control ml-2")
            button(class="btn btn-primary") Search
        table.table
            tr
                th id
                th Name
                th Phone
                th Actions
                th Delete
                th Update
            each user in users
                tr
                    td= user.id
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-light(href='/users/' + user.id) View
                    td
                        a.btn.btn-light(href='/users/' + user.id + '/delete') Delete
                    td
                        a.btn.btn-light(href='/users/' + user.id + '/update') Update